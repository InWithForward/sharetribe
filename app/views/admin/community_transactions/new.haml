.centered-section
  = form_for(:transaction, url: confirm_create_admin_community_transactions_path(community_id: params[:community_id]), method: :get) do |form|
    .row
      .col-12
        = form.label :starter_id, 'Kudoer'
        = form.select :starter_id, @memberships.map { |m| [m.person.full_name, m.person.id] }
    .row
      .col-12
        = form.label :start_at, 'Start Time'
        = form.datetime_select :start_at, ampm: true, minute_step: 15
    .row
      .col-12
        = form.label :skip_confirmation_email, 'Skip Confirmation Email'
        = form.check_box :skip_confirmation_email
    .row
      .col-12
        = form.label :skip_reminder_email, 'Skip Reminder Email'
        = form.check_box :skip_reminder_email

    = form.hidden_field :listing_id, value: params[:listing_id]
    .row
      .col-12
        = form.button t('conversations.new.submit'), :class => "send_button"
