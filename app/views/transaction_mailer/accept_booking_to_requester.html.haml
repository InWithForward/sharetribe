- conversation_url = person_transaction_url(person_id: recipient.id, id: transaction.id.to_s)

%tr
  %td{:align => "left"}
    %font{body_font}
      = t("emails.accept_booking_to_requester.body", host: transaction.offerer.name(community), listing: transaction.listing.title).html_safe

%tr
  %td{:align => "left", :style => "padding: 10px 0;"}
    %table{:cellpadding => 5, :cellspacing => 0}
      %tbody
        %tr
          %td
            %b
              =t("emails.accept_booking_to_requester.date")
          %td
            %b
              =t("emails.accept_booking_to_requester.time")
          %tr
            %td{:width => "250"}
              = booking.start_at.to_date.to_formatted_s(:short)
            %td
              = "#{booking.start_at.to_formatted_s(:time)} - #{booking.end_at.to_formatted_s(:time)}"

= render :partial => "person_mailer/action_button", :locals => { :text => t("emails.accept_booking_to_requester.button"), :url => conversation_url}
