= render :partial => "layouts/left_hand_navigation", :locals => { :links => about_links }

- content_for :title, t('layouts.infos.custom')

.left-navi-section.about-section
  = render :layout => "layouts/mercury_editable_page", :locals => { :content_type => "custom_page_content" } do
    - if @community_customization && @community_customization.custom_page_content
      - content = @community_customization.custom_page_content.html_safe
    - else
      - content = ""

    - content_for :meta_description, StringUtils.first_words(strip_tags(content.html_safe))
    - content_for :keywords, StringUtils.keywords(strip_tags(content.html_safe))

    = content
