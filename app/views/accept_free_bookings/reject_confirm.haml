- content_for :title_header do
  %h1= t("layouts.no_tribe.inbox")

.conversation-status-form.centered-section
  %h2= t('free_bookings.reject_confirm.heading')
  %p=  t('free_bookings.reject_confirm.body')
  = form_for :conversation, :url => reject_free_booking_person_message_path(:person_id => @current_user.id, :id => @listing_conversation.id), :html => { :method => "put" } do |form|
    = form.label :reason, "Reason for cancelation"
    = form.text_area :reason
    = form.button t('free_bookings.reject_confirm.submit'), :class => "send_button"
