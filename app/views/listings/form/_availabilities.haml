- if !@listing.transaction_type.is_badge?
  #calendar

  = render layout: "layouts/lightbox", locals: { id: "add_availability_dialog"} do
    %h2=t('listings.form.availabilities.add_recurring_prompt.title')
    %p= t('listings.form.availabilities.add_recurring_prompt.body')
    %button#add-recurring
      .content="Recurring"
    %button#add-once
      .content="Once"

  = render layout: "layouts/lightbox", locals: { id: "remove_availability_dialog"} do
    %h2=t('listings.form.availabilities.remove_recurring_prompt.title')
    %p= t('listings.form.availabilities.remove_recurring_prompt.body')
    %button#remove-recurring
      .content="Recurring"
    %button#remove-once
      .content="Once"

= form.hidden_field(:availabilities_json)
